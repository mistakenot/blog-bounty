@model BlogBounty.Models.SubmissionViewModels.NewSubmissionRequestModel

@{
    ViewBag.Title = "New Submission";
    Layout = "_Layout";
}

<h2>New Submission</h2>

<div class="row">
    <form asp-controller="Submission" asp-action="Index" asp-area="" method="post">
        <div class="form-group">
            <label asp-for="Title" class="col-sm-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Uri" class="col-sm-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Uri" class="form-control" />
                <span asp-validation-for="Uri" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
    </form>
</div>